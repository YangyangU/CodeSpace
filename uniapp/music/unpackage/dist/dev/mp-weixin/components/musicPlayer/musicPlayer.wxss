.player {
  position: fixed;
  bottom: var(--5c150d4f);
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  box-shadow: 0 -6rpx 10rpx #eee;
}
.player .mini-player {
  display: flex;
  height: 100%;
  align-items: center;
  padding: 0 30rpx;
}
.player .mini-player .pic {
  flex: 0 0 85rpx;
  width: 85rpx;
  height: 85rpx;
}
.player .mini-player .pic image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  border: 12rpx solid #000;
  box-sizing: border-box;
}
.player .mini-player .song {
  flex: 1;
  margin: 0 20rpx;
}
.player .mini-player .song .name {
  font-size: 28rpx;
  color: #333;
}
.player .mini-player .song .author {
  font-size: 26rpx;
  color: #999;
}
.player .mini-player .player-control {
  flex: 0 0 120rpx;
  display: flex;
  justify-content: space-between;
}
.player .mini-player .player-control .iconfont {
  font-weight: bold;
  font-size: 42rpx;
}
.player .mini-player .player-control .icon-bofanganniu {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid #aaa;
  border-radius: 50%;
  position: relative;
}
.player .mini-player .player-control .icon-bofanganniu::before {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}