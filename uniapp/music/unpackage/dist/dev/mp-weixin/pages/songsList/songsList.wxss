.songs-list .head {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  z-index: 9999;
}
.songs-list .header {
  height: 100rpx;
  width: 100%;
  position: fixed;
  top: 80rpx;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 15rpx;
  box-sizing: border-box;
  color: #fff;
  background-color: #588b77;
  z-index: 999;
}
.songs-list .list-hd {
  background: linear-gradient(to bottom, #588b77, #79af9a);
  padding: 100rpx 30rpx 40rpx;
}
.songs-list .list-hd .hd-info {
  display: flex;
  margin-top: 20rpx;
}
.songs-list .list-hd .hd-info .pic {
  width: 160rpx;
  height: 160rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}
.songs-list .list-hd .hd-info .pic image {
  width: 100%;
  height: 100%;
  border-radius: 8px;
}
.songs-list .list-hd .hd-info .desc {
  margin-left: 20rpx;
  color: #fff;
}
.songs-list .list-hd .hd-info .desc .user {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.songs-list .list-hd .hd-info .desc .user .avatar {
  width: 50rpx;
  height: 50rpx;
}
.songs-list .list-hd .hd-info .desc .user .avatar image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.songs-list .list-hd .hd-info .desc .user .nickname {
  margin: 0 10rpx;
  font-size: 24rpx;
}
.songs-list .list-hd .hd-status {
  display: flex;
  margin-top: 70rpx;
}
.songs-list .list-hd .hd-status .btn {
  flex: 1;
  text-align: center;
  background-color: rgba(255, 255, 255, 0.3);
  color: #fff;
  border-radius: 50rpx;
  padding: 10rpx 0;
  font-size: 28rpx;
  margin: 0 10rpx;
}
.songs-list .list-bd {
  background-color: #fff;
  padding: 0 30rpx;
  position: relative;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  top: -20rpx;
}
.songs-list .list-bd .bd-title {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  position: -webkit-sticky;
  position: sticky;
  top: 100rpx;
  background-color: #fff;
}
.songs-list .list-bd .bd-title .iconfont {
  color: #d81e06;
  margin-right: 8rpx;
}
.songs-list .list-bd .bd-title .count {
  font-size: 20rpx;
}
.songs-list .list-bd .bd-content .item {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}
.songs-list .list-bd .bd-content .item .num {
  flex: 0 0 50rpx;
  color: #8b8f9b;
}
.songs-list .list-bd .bd-content .item .icon-more {
  flex: 0 0 30rpx;
  color: #8b8f9b;
  font-size: 40rpx;
  font-weight: bold;
}
.songs-list .list-bd .bd-content .item .song-desc {
  flex: 1;
}
.songs-list .list-bd .bd-content .item .song-desc .name {
  font-size: 28rpx;
}
.songs-list .list-bd .bd-content .item .song-desc .author {
  font-size: 20rpx;
  color: #8b8f9b;
  margin-top: 4rpx;
}